extends layout 

block content

    h1= item.name

    p #[strong Category:] 
        a(href=`/catalog/categories/${item.category._id}`) #{item.category.name}
    p #[strong Description:] #{item.description}
    p #[strong Price:] #{item.price}
    p #[strong Stock:] #{item.stock}

    hr

    a(href=`${item.url}/delete`) Delete #{item.name}